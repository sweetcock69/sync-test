mkdir -p ~/.bin ~/arrow ~/ccache/
curl https://storage.googleapis.com/git-repo-downloads/repo > ~/.bin/repo
chmod a+rx ~/.bin/repo
cd ~/arrow

~/.bin/repo init -u https://github.com/ArrowOS/android_manifest.git -b arrow-12.0
mkdir -p .repo/local_manifests
curl https://raw.githubusercontent.com/sweetcock69/local_manifest/arrow/local_manifest.xml -o .repo/local_manifests/local_manifest.xml
~/.bin/repo sync -c --force-sync

printf 'umask = 421' >> ~/ccache/ccache.conf
ccache -M 9G

. build/envsetup.sh
lunch arrow_X00T-userdebug
export CCACHE_DIR=~/ccache
export CCACHE_EXEC=$(command -v ccache)
export USE_CCACHE=1
export BUILD_USERNAME=sweetcock69
export BUILD_HOSTNAME=sweetcock69
export TZ=America/Los_Angeles
m bacon
